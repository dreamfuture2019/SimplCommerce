@using System.Globalization

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - SimplCommerce</title>
    @RenderSection("additionalMeta", false)

    <link simpl-append-version="true" rel="stylesheet" href="~/lib/bootstrap4/css/bootstrap.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/bootstrap-star-rating/css/star-rating.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/multi-dropdown-menu/css/bootstrap-4-navbar.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/toastr/build/toastr.min.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/modules/core/site.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/themes/SampleTheme/site.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/lib/smoothproducts/css/smoothproducts.css" />
    <link simpl-append-version="true" rel="stylesheet" href="~/modules/catalog/product-detail.css" />
    <script simpl-append-version="true" src="~/lib/angular/angular.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>

    @RenderSection("head", required: false)
</head>
<body>
    <div class="top-bar">
        <div class="container">
            <div class="row top-link">                
                    <div class="col-log-7 col-md-7 top_nav">
                        <ul class="nav navbar-nav navbar-right">
			                <li><a href="#">Trang chủ</a></li>
                            <li><a href="#">Bảng giá bán</a></li>
                            <li><a href="#">Chế độ bảo hành</a></li>
                            <li><a href="#">Hình thức thanh toán</a></li>
                            <li><a href="#">Liên hệ</a></li>                            
                        </ul>
                    </div>
                    <div class="col-log-5 col-md-5 col-xs-12 right">
                        <ul class="header links nav justify-content-end">
                            <partial name="_SelectLanguagePartial" />
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
            </div>
            <div class="row">   
                
				    <div class="logo col-lg-3 col-md-3">
                        <a asp-area="Core" asp-controller="Home" asp-action="Index">
                            <img alt="SimplCommerce" src="~/themes/SampleTheme/Logo_fusun.png" alt="Fusun">
                        </a>
                    </div>
                    <div class="col-log-7 col-md-7 company_info"><h2>Công ty TNHH Fusun</h2></div>                    
                    <div class="customer-support-text clearfix">
						<img src="~/themes/SampleTheme/hotline_image.svg" alt="Hotline">
						<div class="text"><span>Hotline</span><a href="tel:0933392977">0933 39 29 77</a></div>
					</div>
                
            </div>            
        </div>
    </div>  
    
    <div class="header---navigator header-menu fw hidden-sm hidden-xs">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 col-hg-3 navigator---header category">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMain" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
					<div class="navigator---title category-title">
						<i class="fa fa-bars" aria-hidden="true"></i>
						<span>Danh mục sản phẩm</span>
					</div>
					<div class="navigator---content category-nav sidebar-linklists category-nav-index collapse navbar-collapse" id="navbarMain">
						@await Component.InvokeAsync("CategoryMenu")
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 navigator---linklists">
                    <div class="col-10 col-md-5 col-lg-7 search-box">
                        @await Component.InvokeAsync("SearchForm")
                    </div>
                    <div class="col-2 col-md-1 cart-btn">
                        @await Component.InvokeAsync("CartBadge")
                    </div>
                </div>
            </div>
        </div>
    </div>    
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="footer-content">
            <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h4>@Localizer["Customer Service"]</h4>
                    <vc:menu menu-id="1"></vc:menu>
                </div>
                <div class="col-md-3">
                    <h4>Information</h4>
                    <vc:menu menu-id="2"></vc:menu>
                </div>
                <div class="col-md-6">
                    <h4>SimplCommerce</h4>
                    <p>The first ecommerce system built on .NET Core.</p>
                    <p>Simple to use and easy to customize</p>
                    <p>Cross platform and Open source</p>
                </div>
            </div>
            <hr />
            <p class="pull-left">&copy; @DateTime.Now.Year - SimplCommerce</p>
            <p class="pull-right">Powered by <a href="http://www.SimplCommerce.com"><strong>SimplCommerce</strong></a></p>
        </div>
    </div>
    <div id="shopModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
            </div>
        </div>
    </div>
    <div id="productOverview" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content modal-padding">
            </div>
        </div>
    </div>
    <script>
            window.simplGlobalSetting = {};
            window.simplGlobalSetting.lang = '@CultureInfo.CurrentCulture.Name';
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script simpl-append-version="true" src="~/lib/bootstrap4/js/bootstrap.js"></script>
    <script simpl-append-version="true" src="~/lib/multi-dropdown-menu/js/bootstrap-4-navbar.js"></script>
    <script simpl-append-version="true" src="~/lib/matchheight/jquery.matchHeight.js"></script>
    <script simpl-append-version="true" src="~/lib/toastr/build/toastr.min.js"></script>
    <script simpl-append-version="true" src="~/lib/bootstrap-star-rating/js/star-rating.js"></script>
    @if (CultureInfo.CurrentCulture.Name == "vi-VN")
    {
        <script simpl-append-version="true" src="~/lib/bootstrap-star-rating/js/locales/vi-vn.js"></script>
    }
    <script simpl-append-version="true" src="~/modules/core/main.js"></script>
    <script simpl-append-version="true" src="~/modules/shoppingcart/add-to-cart.js"></script>
    <script simpl-append-version="true" src="~/modules/productcomparison/product-comparison.js"></script>
    <script simpl-append-version="true" src="~/modules/catalog/product-overview.js"></script>
    @RenderSection("scripts", required: false)

    <partial name="_AnalyticsScript" />
</body>
</html>







